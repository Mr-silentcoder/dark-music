<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lite_black"
    android:gravity="center"
    android:padding="3dp">

    <RelativeLayout
        android:id="@+id/relLayClock"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginStart="25dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgViewProgressClock"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/saet_tevahi" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgViewProgressMinute"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/imgViewProgressClock"
            android:layout_alignTop="@+id/imgViewProgressClock"
            android:src="@drawable/saet_ibre_dk"
            android:layout_alignEnd="@+id/imgViewProgressClock"
            android:layout_alignStart="@+id/imgViewProgressClock" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgViewProgressHour"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/imgViewProgressClock"
            android:layout_alignTop="@+id/imgViewProgressClock"
            android:src="@drawable/saet_ibre_saet"
            android:layout_alignStart="@+id/imgViewProgressClock"
            android:layout_alignEnd="@+id/imgViewProgressClock" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvProgressMessage"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/relLayClock"
        android:gravity="center"
        android:text="@string/wait_page_is_loading"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:typeface="serif" />

</RelativeLayout>
